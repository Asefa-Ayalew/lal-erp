{
  "extends": "@lal-erp/tsconfig/nextjs.json",
  "compilerOptions": {
    "moduleResolution": "bundler",
    "plugins": [{ "name": "next" }],
    "baseUrl": ".",
    "paths": {
      "@/components/*": ["./src/components/*"],
      "@/models/*": ["./src/models/*"],
    }
  },
  "include": ["next-env.d.ts", "**/*.ts", "**/*.tsx", ".next/types/**/*.ts"],
  "exclude": [".turbo", ".next", "dist", "build", "node_modules"]
}
