{
  "name": "lal-erp",
  "private": true,
  "scripts": {
    "dev:bo-registration": "turbo run dev --filter=registration",
    "build:bo-registration": "turbo run build --filter=registration",
    "lint:bo-registration": "turbo run lint --filter=registration",
    "dev:bo-bsc": "turbo run dev --filter=bsc",
    "build:bo-bsc": "turbo run build --filter=bsc",
    "lint:bo-bsc": "turbo run lint --filter=bsc",
    "build:core": "turbo run build --filter=@lal-erp/core",
    "build:ui": "turbo run build --filter=@lal-erp/ui",
    "format": "prettier --write \"**/*.{ts,tsx,md}\""
  },
  "devDependencies": {
    "@lal-erp/eslint-config": "workspace:*",
    "@lal-erp/tsconfig": "workspace:*",
    "@tailwindcss/postcss": "4.0.12",
    "@types/node": "^22.13.10",
    "@types/react": "^19.0.10",
    "prettier": "^3.5.3",
    "tailwindcss": "4.0.12",
    "turbo": "^2.4.4",
    "typescript": "5.8.2"
  },
  "packageManager": "pnpm@10.6.1",
  "engines": {
    "node": ">=18"
  },
  "dependencies": {
    "@emotion/react": "^11.14.0",
    "@mantine/core": "^7.17.1",
    "@mantine/hooks": "^7.17.1",
    "bsc": "^2.0.0",
    "registration": "^2.0.0"
  }
}
