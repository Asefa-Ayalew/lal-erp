{
  "extends": "@lal-erp/tsconfig/nextjs.json",
  "compilerOptions": {
    "baseUrl": "src/",
    "paths": {
      "@/app/*": ["app/*"],
      "@/config/*": ["config/*"],
      "@/models/*": ["models/*"],
      "@/contexts/*": ["contexts/*"],
      "@/store/*": ["store/*"],
      "@/utilities/*": ["utilities/*"],
      "@/shared/*": ["shared/*"]
    }
  },
  "include": ["next-env.d.ts", "**/*.ts", "**/*.tsx", ".next/types/**/*.ts", "next.config.js"],
  "exclude": ["node_modules"]
}
